{
  "name": "dnd-generator-backend",
  "version": "1.0.0",
  "description": "Backend API for D&D Character Generator",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "postinstall": "prisma generate",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:migrate:status": "prisma migrate status",
    "prisma:studio": "prisma studio",
    "migration:generate": "node scripts/generate-migration.js",
    "migration:apply": "node migrate-production.js",
    "seed:races": "ts-node seed-races.ts",
    "seed:classes": "tsx seed-classes-new.ts",
    "seed:backgrounds": "ts-node seed-backgrounds.ts",
    "seed:spells": "ts-node seed-spells.ts",
    "seed:equipment": "ts-node seed-equip.ts",
    "seed:glossary": "ts-node import-glossary.ts",
    "seed:feats": "ts-node import-feats.ts",
    "seed:features": "tsx seed-features-only.ts",
    "seed:bestiary": "tsx seed-bestiary.ts",
    "generate:classes:csv": "ts-node generate-classes-csv.ts"
  },
  "keywords": [
    "dnd",
    "api",
    "express"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.3.1",
    "@types/multer": "^2.0.0",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.0.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "socket.io": "^4.8.3",
    "ws": "^8.19.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.0",
    "@types/hpp": "^0.2.6",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.19.7",
    "@types/pg": "^8.16.0",
    "@types/ws": "^8.18.1",
    "nodemon": "^3.1.9",
    "pg": "^8.17.2",
    "prisma": "^6.3.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  }
}
